<h5 class="mb-4 d-flex align-items-center">
  <i class="fas fa-book me-2" aria-hidden="true"></i>
  {{#str}}assignmentsincourse, block_a2nb{{/str}}
</h5>

{{#assignments}}
  <ul class="list-group mb-3">
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <div>
        <!-- Assignment Name -->
        <a href="{{url}}" class="text-decoration-none fw-semibold fs-5 text-primary" aria-label="Assignment: {{name}}">
          {{name}}
        </a>

        <!-- Due Date below name -->
        <div class="mt-1 d-flex align-items-center text-muted small">
          <i class="fa-regular fa-clock me-2" aria-hidden="true"></i>
          <span>{{due_date}}</span>
        </div>
      </div>

      <!-- Redirect icon on the right -->
      <button
        type="button"
        class="btn btn-light create-ipynb"
        data-name="{{name}}"
        data-description="{{description}}"
        data-instructions="{{instructions}}"
        aria-label="Sync both systems">
        <i class="fa-solid fa-diamond-turn-right text-primary fs-4" aria-hidden="true" title="Download notebook for {{name}}"></i>
      </button>
    </li>
  </ul>
{{/assignments}}

{{^assignments}}
  <div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2 fs-4" aria-hidden="true"></i>
    <div>
      {{#str}}noassignmentsfound, block_a2nb{{/str}}
    </div>
  </div>
{{/assignments}}
